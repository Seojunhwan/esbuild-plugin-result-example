{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "target": "ES6",

    "lib": [
      "ES6",
      "DOM",
      "ES2016",
      "ES2017",
      "DOM.Iterable",
      "ESNext",
      "ESNext.AsyncIterable"
    ],
    "jsx": "react-jsx",

    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,

    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,

    "declaration": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,

    "allowJs": true,
    "skipLibCheck": true
  },

  "exclude": ["**/dist/*"]
}
